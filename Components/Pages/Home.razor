@page "/"
@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.VisualBasic
@using SpotifyAPI.Web
@using SpotifyAPI;
@using System.Reflection.Metadata
@rendermode InteractiveServer
@inject IConfiguration Configuration

<PageTitle>Home</PageTitle>

<p OnGet()></p>

@code 
{
    public class IndexModel : PageModel
    {
      public string Message { get; set; }

        public void OnGet()
        {
            // Code here runs when the page is loaded via a GET request.
            Message = "Welcome to the page!";
            // You can fetch data, set up initial state, etc.
        }

        // Or, for asynchronous operations:
        public async Task OnGetAsync()
        {
            // Asynchronously fetch data or perform other setup.
            await Task.Delay(100); // Simulate an async operation
            Message = "Welcome asynchronously!";
        }
    }
}